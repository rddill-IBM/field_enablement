<grammar version="1.0" xml:lang="en-US" root="patterns"
	xmlns="http://www.w3.org/2001/06/grammar">
	<rule id="patterns">
		<one-of>
			<!-- pattern: 8 positions [KQT][A-Z][0-9]{6} -->
			<item>
				<ruleref uri="#firstletters" />
				<ruleref uri="#letters" />
				<ruleref uri="#numbers" />
				<ruleref uri="#numbers" />
				<ruleref uri="#numbers" />
				<ruleref uri="#numbers" />
				<ruleref uri="#numbers" />
				<ruleref uri="#numbers" />
			</item>
		</one-of>
	</rule>
	<rule id="firstletters">
		<one-of>
			<item>K.</item>
			<item>Q.</item>
			<item>T.</item>
		</one-of>
	</rule>
	<rule id="letters">
		<one-of>
			<item>A.</item>
			<item>B.</item>
			<item>C.</item>
			<item>D.</item>
			<item>E.</item>
			<item>F.</item>
			<item>G.</item>
			<item>H.</item>
			<item>I.</item>
			<item>J.</item>
			<item>K.</item>
			<item>L.</item>
			<item>M.</item>
			<item>N.</item>
			<item>O.</item>
			<item>P.</item>
			<item>Q.</item>
			<item>R.</item>
			<item>S.</item>
			<item>T.</item>
			<item>U.</item>
			<item>V.</item>
			<item>W.</item>
			<item>X.</item>
			<item>Y.</item>
			<item>Z.</item>
		</one-of>
	</rule>
	<rule id="numbers">
		<one-of>
			<item>oh</item>
			<item>zero</item>
			<item>one</item>
			<item>two</item>
			<item>three</item>
			<item>four</item>
			<item>five</item>
			<item>six</item>
			<item>seven</item>
			<item>eight</item>
			<item>nine</item>
		</one-of>
	</rule>
</grammar>
